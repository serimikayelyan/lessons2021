#!/bin/bash


declare -A arr
c=0
v=0
for ((i=0; i<$1; i++))
do
   for ((j=0; j<$1; j++))
   do

   arr[$i,$j]=$(($i+$j))
   v=${arr[$i,$j]}

      if [[ $v -eq 0 && $(($i+$j))<=$(($1-1)) ]]
      then
          c=$(($c+1))
      fi
          echo -n ${arr[$i,$j]}

   done

         echo ""
done

         echo $c

