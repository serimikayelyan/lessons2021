sudo adduser exampleuser
sudo touch  /home/exampleuser/examplefile
echo "anything in" > /home/exampleuser/examplefile
echo "barev arev" >> /home/exampleuser/examplefile
sudo chown exampleuser:exampleuser /home/exampleuser/examplefile
cp /usr/bin/cat /home/exampleuser/
sudo chown exampleuser /home/exampleuser/cat
sudo chmod u+s /home/exampleuser/cat
ln -s /home/exampleuser/cat ~/Desktop/catlink
