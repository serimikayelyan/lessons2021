#!/bin/bash

var=0
sum=0
num=0
declare -A arr

for ((i=0; i<$1; i++))
do

    for ((j=0; j<$1; j++))
    do

    arr[$i,$j]=$(($i+$j))
    var=${arr[$i,$j]}

      if [[ $var%2 -eq 0 &&  $j<=$i ]]
      then
        sum=$(($sum+$var))
        num=$(($num+1))
      fi
       echo -n ${arr[$i,$j]}
    done

      echo "" 
done

     c=$(($sum/$num))
     echo $c

